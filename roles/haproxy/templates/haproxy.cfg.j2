global
	log stdout format raw daemon debug

defaults
	log	global
	mode	http
	option	httplog
	option	dontlognull
        timeout connect 5000
        timeout client  50000
        timeout server  50000

userlist admincred
	user admin password {{ monitoring_admin_password | string | password_hash('sha256') }}

