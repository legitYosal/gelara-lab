frontend prometheus_frontend
    bind *:9092
    mode tcp
    option tcplog
    default_backend prometheus_backend
backend prometheus_backend
    mode tcp
    server prometheus {{ hostvars[groups['monitoring'].0].ansible_host }}:9092 check
