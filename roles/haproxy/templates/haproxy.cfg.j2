global
	log /dev/log	local0
	log /dev/log	local1 notice

defaults
	log	global
	mode	http
	option	httplog
	option	dontlognull
        timeout connect 5000
        timeout client  50000
        timeout server  50000

userlist admincred
	user admin password {{ monitoring_admin_password }}

