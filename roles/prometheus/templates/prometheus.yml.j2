      - targets: ['monitoring:9090']
        labels:
          instance: monitoring
          address: {{ hostvars['monitoring'].ansible_host }}:9090
  - job_name: 'node_exporter'
    static_configs:
{% for host in groups['all'] %}
      - targets: ['']
